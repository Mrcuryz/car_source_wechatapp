<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.mapper.LoginMapper">

    <!-- 查询所有登录记录 -->
    <select id="findAll" resultType="com.app.entity.Login">
        SELECT * FROM login
    </select>

    <!-- 根据ID查询登录记录 -->
    <select id="findById" parameterType="Long" resultType="com.app.entity.Login">
        SELECT * FROM login WHERE id = #{id}
    </select>

</mapper>
